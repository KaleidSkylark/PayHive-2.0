                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms of Service"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/baloo"
                    android:padding="5dp"/>

