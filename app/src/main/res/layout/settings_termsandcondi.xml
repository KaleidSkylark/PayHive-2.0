                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Terms and Conditions"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/baloo"
                    android:padding="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
